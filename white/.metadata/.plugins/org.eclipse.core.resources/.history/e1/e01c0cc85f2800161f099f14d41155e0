package jp.asojuku.testmanagement.Vailidator;

public class LoginInfoVailidator {
	private String ManagerMail = "[a-zA-Z0-9!#$%&'_`/=~\\*\\+\\-\\?\\^\\{\\|\\}]+(\\.[a-zA-Z0-9!#$%&'_`/=~\\*\\+\\-\\?\\^\\{\\|\\}]+)*+(.*)@asojuku.ac.jp";
	private String StudentMail = "[a-zA-Z0-9!#$%&'_`/=~\\*\\+\\-\\?\\^\\{\\|\\}]+(\\.[a-zA-Z0-9!#$%&'_`/=~\\*\\+\\-\\?\\^\\{\\|\\}]+)*+(.*)@st.asojuku.ac.jp";
	public int MailCheck(String mail){
		int n;
		

		if (mail.matches(ManagerMail)) {
		  n = 1;
		} else if(mail.matches(StudentMail)){
		  n = 2;
		}else{
		  n = 3;
		}
		return n;
	}

}
